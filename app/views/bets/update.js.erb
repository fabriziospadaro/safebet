function updateBetButtons(html) {
  var betButtons = document.getElementById('<%= "event_#{@bet.event.id}" %>');

  var betslipButton = document.getElementById('<%= "betslip" %>');

    betslipButton.style.display = "<%= Parlay.current(current_user)&.bets&.size.to_i != 0 ? 'block' : 'none' %>";
    betslipButton.innerHTML = "Bet Slip: <%= Parlay.current(current_user)&.bets&.size %> "


  //check if event.started? se true remove the card by event_id
  if (betButtons) betButtons.innerHTML = html;
}

var html = '<%= j render "events/bet_buttons", event: @bet.event, tie: @tie, sport: @sport, bet: @bet %>';
updateBetButtons(html);

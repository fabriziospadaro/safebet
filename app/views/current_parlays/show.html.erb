<body style="background-color: #E3E3E3">


<div class="parlay-wrapper">

 <% if(@bets&.size == 0)  %>
 <a href="/sport" >

   <div class = "betnow">
     Start betting!
   </div>

   <% else %>


   <div class="bet-slip-title" >
     <h6>Your bets have automatically been saved.
       <br>
     <p> You can still add bets to your parlay or cancel any events that haven't yet started.</p>
   </div>

   <div class = "summary">
     <p> <%=  DateTime.now.strftime('%d %b %Y') %> </p>
     <p> <%=  @bets&.size.to_s %> Bet Parlay
     </p>
   </div>


   <div class="cards-container">
     <% @bets.each do |bet|  %>
     <div class="card">
       <div class="top-column">
         <div class="time-score">
           <p id= "date-margin"><%=  bet.event.starts_at.strftime('%l:%M %p') %> CET  </p>
             <% formated_score =  bet.event.scraped_score.to_s %>
             <% if(formated_score != "") %>
                 <% formated_score = (bet.event.status == "In Progress" ? " - Live score: " : " - Result: ") + bet.event.scraped_score  %>
             <% end %>
           <p class = <%= (bet.event.status == "In Progress" ? "red-text" : "black-text") %>>
             <%= formated_score %> </p>
         </div>
          <div class="control-container">
            <div class="cancel-bet">
              <% if (bet.event.status == "Scheduled") %>
                <%= link_to "", destroy_from_bet_slip_path(id: bet.id), class: "fas fa-times"%>
              <% end %>
            </div>
            <div class="edit-bet">
              <% if (bet.event.status == "Scheduled") %>
                <%= link_to "", events_path(sport: bet.event.event_date.sport.name, anchor: "bet_" +bet.event.id.to_s ), class: "fas fa-pencil-alt"%>
              <% end %>
            </div>
          </div>
       </div>
         <div class="info-container">
           <div class="team-a">
             <p><%= bet.event.team_a.name.titleize %> vs. </p>
           </div>
           <div class="team-b">
             <p><%= bet.event.team_b.name.titleize %></p>
           </div>
           <div class="your-bet">
              <p><%= link_to "Your bet: " + bet.team.name.titleize ,events_path(sport: bet.event.event_date.sport.name, anchor: "bet_" +bet.event.id.to_s )%></p>
           </div>
         </div>
     </div>
     <% end %>
   </div>




     <!-- ending Div for Bet-Wrapper -->

     <a href="/sport" >
      <div class = "betnow">
       Back to sports page
       <% end %>
     </div>
     <!-- ending Div for Parlay-Wrapper -->

   </div>
</body>
